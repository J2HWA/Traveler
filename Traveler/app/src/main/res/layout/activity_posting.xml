<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme"
    android:orientation="vertical">



    <android.support.v7.widget.Toolbar
        android:id="@+id/post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/banner_main_line_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="게시글 작성하기"
            android:textColor="@color/main"
            android:fontFamily="@font/nanumsquare_acr"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/post_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/post_toolbar" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/post_addtravelbook"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:background="@drawable/background_line_mint_book_plus_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bar_menu_background_gray_thin_full"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_travelbook_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/nanumsquare_aceb"
                    android:textColor="@color/main"
                    android:text="트래블 북을 추가해보세요!"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bar_menu_background_gray_full"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:text="제목"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:paddingTop="10dp"
                        android:text="내용"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:text="태그 선택"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:textSize="15dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:text="여행 여부"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:text="채팅 유무"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:textSize="15dp" />
                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/post_title"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="제목"
                            android:inputType="textPersonName"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:textSize="15dp" />
                    </RadioGroup>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <EditText
                        android:id="@+id/post_contents"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="내용"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/post_meetbool"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:paddingTop="10dp"
                        android:text="#만나서_여행해요" />

                    <TextView
                        android:id="@+id/post_carbool"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:paddingTop="10dp"
                        android:layout_toEndOf="@+id/post_meetbool"
                        android:text="#차_타고_다님" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/post_traveling"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:paddingTop="10dp"
                        android:text="여행중" />

                    <TextView
                        android:id="@+id/post_planing"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:paddingTop="10dp"
                        android:layout_toEndOf="@+id/post_traveling"
                        android:text="계획중" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/post_yeschat"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:paddingTop="10dp"
                        android:text="채팅 받기" />

                    <TextView
                        android:id="@+id/post_notchat"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:paddingTop="10dp"
                        android:layout_toEndOf="@+id/post_yeschat"
                        android:text="채팅 거부" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</LinearLayout>