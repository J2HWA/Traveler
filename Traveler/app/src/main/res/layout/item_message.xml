<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/messageItem_linearlayout_main">
    <LinearLayout
        android:id="@+id/messageItem_linearlayout_destination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/messageaItem_imageView_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/messageItem_textView_name"
            android:text="이름"
            android:layout_width="wrap_content"
            android:fontFamily="@font/nanumsquare_acr"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="메세지"
            android:id="@+id/messageItem_textView_message"
            android:fontFamily="@font/nanumsquare_acr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/messageitem_textview_readCounter_left"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="11dp"
                android:text="1"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginRight="3dp"/>
            <TextView
                android:text="2019.02.12 12:12"
                android:textSize="9dp"
                android:fontFamily="@font/nanumsquare_acl"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/messageItem_textview_timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/messageitem_textview_readCounter_right"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="11dp"
                android:text="1"
                android:layout_margin="2dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>