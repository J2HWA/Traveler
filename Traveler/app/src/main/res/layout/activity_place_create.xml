<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".place.PlaceCreateActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/placecreate_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/banner_main"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="여행지 생성"
            android:textSize="20dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/placecreate_dogimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/mainicon"
                tools:layout_editor_absoluteX="104dp"
                />

            <Spinner
                android:id="@+id/placecreate_area"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/local"
                tools:layout_editor_absoluteX="104dp" />

            <Spinner
                android:id="@+id/placecreate_category"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/category"
                tools:layout_editor_absoluteX="104dp" />

            <EditText
                android:id="@+id/placecreate_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 이름"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="104dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행지 테스트 점수" />

            <RatingBar
                android:id="@+id/placecreate_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/placecreate_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 설명"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_tag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 태그"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 주소"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_tel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 연락처"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_price"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 가격"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_park"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 주차 가능/불가능"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_wedo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 위도"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_gyoungdo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="여행지 경도"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/placecreate_totalRating"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="리뷰 토탈점수"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/placecreate_click"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="조회수"
                android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>