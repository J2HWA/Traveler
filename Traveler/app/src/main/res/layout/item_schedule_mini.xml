    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="95dp"
    android:layout_height="55dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/schedule_mini_image"
        android:layout_width="55dp"
